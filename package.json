{
  "name": "hono-auto-md",
  "version": "0.1.2",
  "description": "Hono middleware that serves Markdown responses to AI clients by converting HTML via webforai.",
  "keywords": [
    "hono",
    "middleware",
    "markdown",
    "ai",
    "llm",
    "webforai"
  ],
  "author": "inaridiy",
  "repository": {
    "type": "git",
    "url": "https://github.com/inaridiy/hono-auto-md.git"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "changeset": "changeset",
    "release": "changeset publish",
    "prepare": "npm run build",
    "test": "vitest run"
  },
  "peerDependencies": {
    "hono": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.29.7",
    "@hono/node-server": "^1.19.4",
    "hono": "^4.9.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "webforai": "^2.1.1"
  }
}
